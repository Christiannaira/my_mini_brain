<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserStartActivity"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <ImageView
        android:layout_marginTop="60dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/myminibrain_initial_logo"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_start_headline"
        android:textSize="25sp"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        />

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_start_description"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#222222"
        />

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_start_question"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#444444"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sellBtn"
            android:layout_width="350dp"
            android:layout_height="60dp"
            app:cornerRadius="6dp"
            android:text="@string/user_start_sellerBtn"
            android:backgroundTint="@color/primary"
            android:textSize="18sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buyBtn"
            android:layout_width="350dp"
            android:layout_height="60dp"
            app:cornerRadius="6dp"
            android:text="@string/user_start_buyerBtn"
            android:backgroundTint="#ffffff"
            android:textColor="@color/primary"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            android:textSize="18sp"
            />

    </LinearLayout>

</LinearLayout>